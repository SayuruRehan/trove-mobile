<?xml version="1.0" encoding="utf-8"?>
<!-- Ensure that your XML starts with the correct declaration -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/successContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Success Image -->
    <ImageView
        android:id="@+id/imageViewSuccess"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_success_image"
        android:contentDescription="Success Image"
        android:layout_marginBottom="24dp" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/textViewSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:contentDescription="Success Message" />

    <!-- Secondary Message -->
    <TextView
        android:id="@+id/textViewSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order will be delivered soon. Thank you for choosing our app!"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:contentDescription="Order Confirmation Message" />

    <!-- Continue Shopping Button -->
    <Button
        android:id="@+id/buttonContinueShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE SHOPPING"
        android:textAllCaps="true"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:contentDescription="Continue Shopping Button" />
</LinearLayout>
